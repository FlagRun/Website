<h2>Sign up</h2>
<div class="well">
    <div class="auth-register">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username, required: true, autofocus: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
      <%= f.input :email, required: true, autofocus: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
      <%= f.input :password, required: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
      <%= f.input :password_confirmation, required: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
    </div>
    <br />
    <div class="forum-inputs">
      <%= label_tag :captcha, :captcha, class: 'control_label' %>
      <p><%= captcha_tag %></p>
      <% if request.post? && !valid_captcha?(params[:captcha]) %>
          <p class="text-danger"><%= valid_captcha?(params[:captcha]) ? 'valid' : 'invalid captcha' %></p>
          <p><%= text_field_tag :captcha, :captcha, class: 'form-control', id: 'inputError' %></p>
      <% else %>
          <p><%= text_field_tag :captcha, :captcha, class: 'form-control' %></p>
      <% end %>

    </div>
    <br />
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-info' %>
    </div>
  <% end %>
   </div>
</div>

<%= render "devise/shared/links" %>
