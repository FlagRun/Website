<h2>Sign up</h2>
<div class="well">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
    <%= f.input :email, required: true, autofocus: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
    <%= f.input :password, required: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
    <%= f.input :password_confirmation, required: true, label_html: {class: 'control-label'},input_html: {class: 'form-control'} %>
  </div>
  <br />
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-info' %>
  </div>
<% end %>
  </div>

<%= render "devise/shared/links" %>
