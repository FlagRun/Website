= simple_form_for(@system_news, html: {class: 'form-horizontal', role: 'form'}) do |f|
  = f.error_notification

  .form-group
    = f.input :title, input_html: {class: 'form-control input-sm'}
    = f.input :tags, input_html: {class: 'form-control input-sm'}
    = f.input :body, as: :text, input_html: {class: 'form-control input-sm markdown', rows: 20}

  .form-group
    = f.button :submit, button_html: {class: 'btn'}
